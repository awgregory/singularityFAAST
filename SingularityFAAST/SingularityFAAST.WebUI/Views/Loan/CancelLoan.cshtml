@model IEnumerable<SingularityFAAST.Core.Entities.Loan>

@{
    ViewBag.Title = "RenewLn";
}

@*View Devices in Loan should go to its own page that lists each item with the ability to renew individually *@
<br />
<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="col-md-offset-3">Cancel Existing Loan</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        Would you like to:
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        @Html.ActionLink("Cancel Entire Loan", "", null, new { @class = "btn btn-default" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-5 col-md-offset-3">
                        @Html.ActionLink("View Loan Details to Cancel Items", "", null, new { @class = "btn btn-default" })
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        @Html.ActionLink("Exit without canceling", "", null, null)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
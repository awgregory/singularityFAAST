            @*Date appears, Due date appears*@
            <b>
                Today's Date: @DateTime.Now.ToString("MMMM dd, yyyy")
                <br />
                Loan Due Date: @DateTime.Now.AddDays(29).ToString("MMMM dd")
            </b>

            <hr />
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Select Client: </h4>
                    <div class="row">
                        <div class="col-md-12">

                            @*search for client by last name, select*@
                            <div class="col-md-5 form-inline">
                                <input type="text" class="form-control" id="clientSearchInput" name="searchby" placeholder="Search Client Last Name" /> @*Search by last name*@
                                <input type="submit" class="btn btn-primary" name="byName" value='Search' id="clientSearchButton" />
                            </div>

                            @*Need remove client button here*@ @*Currently must reload the page if wanting new client*@
                            <div class="col-md-4  form-inline">
                                <input type="submit" class="btn btn-primary" id="chooseNewClient" value='Choose Different Client' disabled="disabled" />
                            </div>

                            @*Error message
                                @*<div class="col-md-3" style="color: red;" id="clientInfoAlert"></div>*@
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-striped table-hover table-condensed"
                                   id="clientSearchTable">
                                <thead>
                                    <tr>
                                        <th>
                                            Select
                                        </th>
                                        <th>
                                            Client ID
                                        </th>
                                        <th>
                                            Client First Name
                                        </th>
                                        <th>
                                            Client Last Name
                                        </th>
                                        <th>
                                            Phone
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Eligibility
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div id="sectionTwo">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Loan Information: </h4>
                                
                                <div class="col-md-7" id="purpose">
                                    <h5><b>Primary Purpose</b></h5>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-group" id="A" name="purp" value="Assist in decision making (device trial or evaluation">Assist in decision making (device trial or evaluation)</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-group" id="B" name="purp" value="Provide an accomodation on a short-term basis">Provide an accomodation on a short-term basis</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-group" id="C" name="purp" value="Conduct training, self-education or other professional development activity">Conduct training, self-education or other professional development activity</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-group" id="D" name="purp" value="Serve as Loaner during Device Repair or while waiting for funding">Serve as Loaner during Device Repair or while waiting for funding</label>
                                    </div>
                                </div>

                                <div class="col-md-4" id="decision">
                                    <h5><b>Primary Purpose Decision Area</b></h5>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-t-group" id="E" name="ppda" value="Education">Education</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-t-group" id="F" name="ppda" value="Employment">Employment</label>
                                    </div>
                                    <div class="radio">
                                        <label><input type="radio" class="purp-t-group" id="G" name="ppda" value="Community Living">Community Living</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="sectionThree">
                @*Error message*@
                @*<div class="col-md-3" style="color: red;" id="purposeInfoAlert"></div>*@
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Select Inventory Items: </h4>
                                @*search for item by name, select*@
                                <div class="col-md-8 form-inline">
                                    <input type="text" class="form-control" id="itemSearchInput" name="searchby" placeholder="Search by Item Name" /> @*Search by last name*@
                                    <input type="submit" class="btn btn-primary" name="byName" value='Search' id="itemSearchButton" />
                                </div>


                    @{  int counterInv = 0;
                        foreach (var item2 in Model.InventoryItem)
                        {
                            counterInv++;
                            if (counterInv < 11)
                            {
                                <tr>
                                    <td>
                                        @*this just wants to record the checkboxes*@
                                        @using (Html.BeginForm("ViewItems", "Loan", FormMethod.Post, new { @class = "form-inline" }))
                                        {
                                            <input type="hidden" value="@item2.InventoryItemId" name="ItemId" /> @* C# Async method? *@
                                            <input type="checkbox" style="float: left;" value="Select" />
                                        }
                                    </td>
                                    <td>
                                        @item2.InventoryItemId
                                    </td>
                                    <td>
                                        @item2.ItemName
                                    </td>
                                    <td>
                                        @item2.Manufacturer
                                    </td>
                                    <td>
                                        @item2.Description
                                    </td>
                                    <td>
                                        @item2.Accessories
                                    </td>
                                    <td>
                                        @item2.Availability
                                    </td>
                                    <td>
                                        @item2.Damages
                                    </td>
                                </tr>
                            }
                        }

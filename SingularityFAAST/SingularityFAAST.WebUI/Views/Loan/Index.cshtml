@using System.Data.Entity.Core.Objects.DataClasses
@model IEnumerable<SingularityFAAST.Core.DataTransferObjects.LoansClientsInventoryDTO>

@{
    ViewBag.Title = "Loan";
}

<h2>Manage Loans</h2>
@*<div class="col-md-4 col-md-offset-4"></div>*@  @*This was to center the title*@
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("Create New Loan", "AddLoan", null, new {@class = "btn btn-primary"})

            @*test button for Strong View*@
            @*@Html.ActionLink("Create New Loan", "Strong", null, new { @class = "btn btn-primary" })*@

        </div>
        @using (Html.BeginForm("Index", "Loan", FormMethod.Post, new {@class = "form-inline"}))
        {
            <div class="col-md-3">
                <input type="text" class="form-control" id="LName" name="searchby" placeholder="Search by Client Last Name"/> @*Search by last name*@ @*Change to button with dropdown for 2?*@
                <input type="submit" class="btn btn-primary" name="byName" value='Search'/>
            </div>
        }
        @using (Html.BeginForm("Index", "Loan", FormMethod.Post, new { @class = "form-inline" }))
        { 
            <div class="col-md-3">
                <input type="text" class="form-control"  id="LoanNum" name="searchby" placeholder="Search by Loan Number"/>  @*Search by loan Number*@
                <input type="submit" class="btn btn-primary" name="byNum" value="Search"/>
            </div>
        }
    </div>
    <hr />

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">   @*make this a list group (see bootstrap components)*@
                <i class="fa fa-search-plus fa-lg"></i> Select any loan to edit, renew or cancel. <br/>
                <i class="fa fa-check text-info fa-lg"></i> Select any active loan to check-in. <br/>
                <i class="fa fa-exclamation-circle fa-lg text-danger"></i> Indicates a loan or item in loan is overdue.
            </div>
        </div>
        
        @*<div class="container-fluid">*@
        <div class="row">
            <br />
            <div class="col-md-8">
                <table class="table table-striped table-hover table-condensed" style="float: left;">
                    <thead>
                        <tr>
                            <th>
                                Select
                            </th>
                            <th>
                                Loan Number
                            </th>
                            <th>
                                Date Created
                            </th>
                            <th>
                                Client ID
                            </th>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                                @*@Html.ActionLink("Loan End Date", "IndexLoan", new { sort = ViewBag.DateSortParm })*@
                            </th>
                        </tr>
                    </thead>
                    <tbody>     @*Do for 5 items in list, with next page, or do iframe with scrolling *@
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @using (Html.BeginForm("ViewItems", "Loan", FormMethod.Post, new {@class = "form-inline"}))
                                        {
                                            <input type="hidden" value="@item.LoanNumber" name="LoanNumber"/>
                                            <button type="submit" style="float: left"><i class="fa fa-search-plus fa-md"></i></button>  @*View items in Loan*@
                                        }
                                    @if (item.IsActive)
                                        {
                                            using (Html.BeginForm("CheckIn", "Loan", FormMethod.Post, new {@class = "form-inline"}))
                                            {
                                             <input type="hidden" value="@item.LoanNumber" name="LoanNumber"/>
                                             <button type="submit" style="float: none"><i class="fa fa-check text-info fa-md"></i></button>  @*Check in Entire loan*@
                                            }
                                        } 
                                </td>
                                <td>
                                    12-DL-@item.LoanNumber              @*|| (item.LoanDate.AddDays(28) < DateTime.Today.AddDays(1)))) Gets overdue *items* in loan*@
                                    @if ((item.DateCreated.AddDays(28) < DateTime.Today.AddDays(1)) && (item.IsActive))  
                                    {
                                        <i class="fa fa-exclamation-circle fa-lg text-danger"></i>
                                    }
                                </td>
                                <td>
                                    @item.DateCreated.ToString("MMMM dd, yyyy")
                                </td>
                                <td>
                                    @item.ClientId
                                </td>
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="Index.cshtml">< Previous 10 </a> @*use bootstrap pagination here*@
                <a href="Index.cshtml">| Next 10 ></a>
            </div>

            @*@*<div class="col-md-2 col-sm-3 hidden-xs">*@
            @*Placeholder - keep empty*@
            @*</div>*@

            <div class="col-md-4">
                <div class="sidebar">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Loans Due This Week</h3>   @*Could this be items / devices due instead?*@
                            @*<div class="navbar-collapse navbar-right collapse">*@
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover table-condensed">
                                <thead>
                                <tr>
                                    <th>
                                        Loan Number
                                    </th>
                                    <th>
                                        Date Due
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    var dateDue = item.DateCreated.AddDays(28);
                                    var dateC = item.DateCreated;

                                    if ((dateDue <= DateTime.Now.AddDays(7) && dateDue >= DateTime.Now) && (item.IsActive))
                                    {
                                        <tr>        
                                            <td>
                                                @using (Html.BeginForm("ViewItems", "Loan", FormMethod.Post, new {@class = "form-inline"}))
                                                     {
                                                         <input type="hidden" value="@item.LoanNumber" name="LoanNumber"/>
                                                         <button type="submit" style="float: left"><i class="fa fa-search-plus fa-md"></i></button> @*View items in Loan*@
                                                     }
                                                12-DL-@item.LoanNumber
                                            </td>
                                            <td>@item.DateCreated.AddDays(28).ToString("MMMM dd")</td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                @*</div>*@
            </div>
                
            @*<div class="col-md-4">*@
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Overdue Loans</h3>  
                            @*<div class="navbar-collapse navbar-right collapse">*@
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            Loan Number
                                        </th>
                                        <th>
                                            Date Due
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        if ((item.DateCreated.AddDays(28) < DateTime.Today.AddDays(1)) && (item.IsActive))
                                        {
                                            <tr>       
                                                <td>
                                                    @using (Html.BeginForm("ViewItems", "Loan", FormMethod.Post, new {@class = "form-inline"}))
                                                         {
                                                             <input type="hidden" value="@item.LoanNumber" name="LoanNumber"/>
                                                             <button type="submit" style="float: left"><i class="fa fa-search-plus fa-md"></i></button> @*View items in Loan*@
                                                         }
                                                    12-DL-@item.LoanNumber
                                                </td> 
                                                <td>@item.DateCreated.AddDays(28).ToString("MMMM dd")</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
